{
  "name": "parse-redis-url-simple",
  "version": "1.0.0",
  "description": "Simple parser for redis url",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "test": "jest --config jestconfig.json",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/glani/parse-redis-url-simple.git"
  },
  "keywords": [
    "redis",
    "parse",
    "url",
    "parser"
  ],
  "author": "glani",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/glani/parse-redis-url-simple/issues"
  },
  "homepage": "https://github.com/glani/parse-redis-url-simple#readme",
  "devDependencies": {
    "@types/jest": "^24.0.13",
    "jest": "^24.8.0",
    "prettier": "^1.18.2",
    "ts-jest": "^24.0.2",
    "tslint": "^5.17.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.5.1"
  },
  "files": [
    "lib/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/__tests__/*"
  ]
}
